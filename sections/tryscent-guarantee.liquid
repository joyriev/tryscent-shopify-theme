{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  
  <div
    id="{{ section.id }}"
    class="section-{{ section.id }}-padding"
    style="background-color: {{ section.settings.background_color }}">
    <div class="page-width">
      <div class="max-w-[800px] mx-auto text-center">
        <img src="{{ section.settings.icon | image_url: width: 200 }}" alt="Money Back Guarantee" class="size-24 mx-auto">
        <h2 class="text-2xl md:text-4xl font-bold mt-0">{{ section.settings.title }}</h2>
        <div class="text-lg md:text-xl text-gray-950">{{ section.settings.description }}</div>
      </div>
    </div>
  </div>
  
  {% schema %}
    {
      "name": "Tryscent Guarantee",
      "settings": [
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#fcfbf9"
        },
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Tryscent Guarantee"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "header",
          "content": "t:sections.all.padding.section_padding_heading"
        }, {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        }, {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
      ],
      "presets": [
        {
          "name": "Tryscent Guarantee"
        }
      ]
    }
  {% endschema %}