{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding text-center bg-cover bg-bottom"
  style="background-image: url('{{ section.settings.background_image |  image_url }}')">
  <div class="page-width">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 itm">
      <div class="flex flex-col justify-center items-center text-center [&>*]:m-0 gap-6 md:px-10">
        <div class="bg-[#2a2a2a] rounded px-3">
          <span class="uppercase text-white text-center">{{ section.settings.offer-text }}</span>
        </div>
        <h2 class="text-3xl md:text-4xl font-black tracking-tight leading-snug">{{ section.settings.offer_title }}</h2>
        <p class="text-base md:text-lg font-medium text-[#121212]">{{ section.settings.offer_description }}</p>
        <p class="text-base md:text-lg font-medium text-[#121212]">{{ section.settings.offer_sub_description }}</p>
        <a href="{{ section.settings.offer_button_link }}" class="bg-[#137c44] text-white uppercase font-semibold no-underline px-6 py-3 text-lg rounded-full">{{ section.settings.offer_button_text }}</a>
        <div>
          <div>
            <p>this is something</p>
          </div>
        </div>
      </div>
      <div class="text-center">
        <img
          class="max-w-full h-auto"
          src="{{ section.settings.offer_image | image_url: width: 700 }}"
          alt="Hero Image"
          width="450"
          height="450">
      </div>
    </div>
  </div>
</div>


{% schema %}

  {
    "name": "Special Offer",
    "class": "special-offer",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "offer_image",
        "label": "Offer Image"
      },
      {
        "type": "text",
        "id": "offer-text",
        "label": "Offer Text",
        "default": "Special Offer"
      },

      {
        "type": "text",
        "id": "offer_title",
        "label": "Offer Title",
        "default": "Your Offer Title Goes Here"
      }, {
        "type": "text",
        "id": "offer_description",
        "label": "Offer Description",
        "default": "Your Offer Description Goes Here"
      }, {
        "type": "text",
        "id": "offer_sub_description",
        "label": "Offer Sub Description",
        "default": "Your Offer Sub Description Goes Here"
      }, {
        "type": "text",
        "id": "offer_button_text",
        "label": "Offer Button Text",
        "default": "Click Here"
      }, {
        "type": "url",
        "id": "offer_button_link",
        "label": "Offer Button Link"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Special Offer"
      }
    ]
  }

{% endschema %}