{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<div
  id={{section.id}}
  class="section-{{ section.id }}-padding"
  style="background-image: url({{ section.settings.background_image }})">
  <div>
    <p>{{ section.settings.offer-text }}</p>
    <h2>{{ section.settings.offer_title }}</h2>
    <p>{{ section.settings.offer_description }}</p>
    <p>{{ section.settings.offer_sub_description }}</p>
    <a href="{{ section.settings.offer_button_link }}">{{ section.settings.offer_button_text }}</a>
    <div>
      <img src="" alt="">
      <p>loved by 10,000+</p>
    </div>
    <img
      src="{{ section.settings.offer_image | image_url: width: 700 }}"
      alt=""
      width={{ section.settings.offer_image.width }}
      height={{ section.settings.offer_image.height }}>
  </div>
</div>

{% schema %}

  {
    "name": "Special Offer",
    "class": "special-offer",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"
      },
      {
        "type": "image_picker",
        "id": "offer_image",
        "label": "Offer Image"
      },
      {
        "type": "text",
        "id": "offer-text",
        "label": "Offer Text",
        "default": "Special Offer"
      },

      {
        "type": "text",
        "id": "offer_title",
        "label": "Offer Title",
        "default": "Your Offer Title Goes Here"
      }, {
        "type": "text",
        "id": "offer_description",
        "label": "Offer Description",
        "default": "Your Offer Description Goes Here"
      }, {
        "type": "text",
        "id": "offer_sub_description",
        "label": "Offer Sub Description",
        "default": "Your Offer Sub Description Goes Here"
      }, {
        "type": "text",
        "id": "offer_button_text",
        "label": "Offer Button Text",
        "default": "Click Here"
      }, {
        "type": "url",
        "id": "offer_button_link",
        "label": "Offer Button Link"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Special Offer"
      }
    ]
  }

{% endschema %}