{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.settings.review_image != blank %}
            <div class="swiper-slide">
              <div class="flex flex-col items-center">
                <div class="h-[60px] flex items-center justify-center">
                  <img
                    class="max-w-full h-auto"
                    src="{{ block.settings.review_image | image_url }}"
                    alt="Perk Image">
                </div>
                <p class="mb-0 text-center mt-2">{{ block.settings.review_content }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  const swiper = new Swiper('.swiper-container', {
    // Optional parameters
    direction: 'horizontal',
    loop: false,
    centeredSlides: true,
    slidesPerView: 3,
    spaceBetween: 12,
    breakpoints: {
      749: {
        slidesPerView: 1.2,
      }
    }
  });
</script>

{% schema %}
  {
    "name": "Magazine Reviews",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fcfbf9"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "image_picker",
            "id": "review_image",
            "label": "Review Image"
          }, {
            "type": "text",
            "id": "review_content",
            "label": "Review Content",
            "default": "Review Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Magazine Reviews"
      }
    ]
  }
{% endschema %}