{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script defer src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    {% comment %} Swiper Thumbnails {% endcomment %}

    <div class="swiper-container overflow-hidden -mx-[15px]">
      <div class="swiper-wrapper">
        {% for i in (1..2) %}
          {% for block in section.blocks %}
            {% if block.settings.review_image != blank %}
              <div class="swiper-slide">
                <div class="flex flex-col items-center">
                  <div class="h-[60px] items-center justify-center [display:none] md:[display:block]">
                    <img
                      class="max-w-full h-auto"
                      src="{{ block.settings.review_image | image_url }}"
                      alt="Perk Image"
                      width="{{ block.settings.review_image.width }}"
                      height="{{ block.settings.review_image.height }}">
                  </div>
                  <p class="mb-0 text-center mt-2 font-medium text-gray-950 text-lg leading-snug">{{ block.settings.review_content }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const swiper = new Swiper('.swiper-container', 
        {
          "loop":  true ,
          "centeredSlides": true,
          "initialSlide": 0,
          "slidesPerView": 1.2,
          "loopedSlides": 3,
          "slidesPerGroup": 1,
          "disableOnInteraction": true,
          "spaceBetween": 60,
          "breakpoints": {
            "768": {
              "slidesPerView": 3,
              "spaceBetween": 25,
              "centeredSlides": false
            }
          }
        }
    );
  });
</script>

{% schema %}
  {
    "name": "Magazine Reviews",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fcfbf9"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "image_picker",
            "id": "review_image",
            "label": "Review Image"
          }, {
            "type": "text",
            "id": "review_content",
            "label": "Review Content",
            "default": "Review Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Magazine Reviews"
      }
    ]
  }
{% endschema %}