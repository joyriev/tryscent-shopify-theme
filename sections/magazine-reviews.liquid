{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .reviews-thumbnail .swiper-slide {
    opacity: 0.5;
  }

  .reviews-thumbnail .swiper-slide-active {
    opacity: 1;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script defer src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="reviews-thumbnail overflow-hidden mb-2 md:hidden">
      <div class="swiper-wrapper">
        {% for i in (1..2) %}
          {% for block in section.blocks %}
            {% if block.settings.review_image != blank %}
              <div class="swiper-slide">
                <img
                  class="max-w-full h-auto"
                  src="{{ block.settings.review_image | image_url }}"
                  alt="Perk Image"
                  width="{{ block.settings.review_image.width }}"
                  height="{{ block.settings.review_image.height }}">
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
    <div class="swiper-container overflow-hidden -mx-[15px]">
      <div class="swiper-wrapper">
        {% for i in (1..2) %}
          {% for block in section.blocks %}
            {% if block.settings.review_image != blank %}
              <div class="swiper-slide">
                <div class="flex flex-col items-center">
                  <div class="h-[60px] items-center justify-center [display:none] md:[display:block]">
                    <img
                      class="max-w-full h-auto"
                      src="{{ block.settings.review_image | image_url }}"
                      alt="Perk Image"
                      width="{{ block.settings.review_image.width }}"
                      height="{{ block.settings.review_image.height }}">
                  </div>
                  <p class="mb-0 text-center mt-2 font-medium text-gray-950 text-lg leading-snug">{{ block.settings.review_content }}</p>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>

  document.addEventListener('DOMContentLoaded', function() {
    // Initialize main slider
    const mainSwiper = new Swiper('.swiper-container', {
      loop: true,
      centeredSlides: true,
      initialSlide: 0,
      slidesPerView: 1.2,
      loopedSlides: 3,
      slidesPerGroup: 1,
      disableOnInteraction: true,
      spaceBetween: 60,
      breakpoints: {
        "768": {
          "slidesPerView": 3,
          "spaceBetween": 25,
          "centeredSlides": false
        }
      }
    });

    // Initialize thumbnail slider
    const thumbnailSwiper = new Swiper('.reviews-thumbnail', {
      slidesPerView: 2.3,
      spaceBetween: 10,
      centeredSlides: true,
      slideToClickedSlide: true,
      watchSlidesVisibility: true,
      watchSlidesProgress: true,
    });

    // Connect both sliders
    mainSwiper.controller.control = thumbnailSwiper;
    thumbnailSwiper.controller.control = mainSwiper;

    // Handle thumbnail click
    document.querySelectorAll('.reviews-thumbnail .swiper-slide').forEach((thumb, index) => {
      thumb.addEventListener('click', () => {
        mainSwiper.slideToLoop(index);
      });
    });
  });
</script>

{% schema %}
  {
    "name": "Magazine Reviews",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#fcfbf9"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "image_picker",
            "id": "review_image",
            "label": "Review Image"
          }, {
            "type": "text",
            "id": "review_content",
            "label": "Review Content",
            "default": "Review Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Magazine Reviews"
      }
    ]
  }
{% endschema %}