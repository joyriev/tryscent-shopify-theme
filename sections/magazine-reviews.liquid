{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
  {%- endstyle -%}
  
  <div
    id="{{ section.id }}"
    class="section-{{ section.id }}-padding"
    style="background-color: {{ section.settings.background_color }}"
  >
    <div class="page-width">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          {% for block in section.blocks %}
              {% if block.settings.review_image != blank %}
              <div class="flex flex-col items-center">
                  <img class="max-w-full h-auto" src="{{ block.settings.review_image | image_url: width: 150 }}" alt="Perk Image">
                  <p class="mb-0 text-center">{{ block.settings.review_content }}</p>
              </div>
              {% endif %}
          {% endfor %}
      </div>
    </div>
  </div>
  
  {% schema %}
    {
      "name": "Magazine Reviews",
      "settings": [
        {
          "type": "color",
          "id": "background_color",
          "label": "Background Color",
          "default": "#fcfbf9"
        }, {
          "type": "header",
          "content": "t:sections.all.padding.section_padding_heading"
        }, {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 36
        }, {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 36
        }
      ],
      "blocks": [
        {
          "type": "review",
          "name": "Review",
          "settings": [
            {
              "type": "image_picker",
              "id": "review_image",
              "label": "Review Image"
            }, {
              "type": "text",
              "id": "review_content",
              "label": "Review Content",
              "default": "Review Content"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Magazine Reviews"
        }
      ]
    }
  {% endschema %}