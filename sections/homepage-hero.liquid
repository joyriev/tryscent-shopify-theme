{%- style -%}
.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}

@media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    }
}
{%- endstyle -%}

<div id="{{ section.id }}" class="section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="flex flex-col justify-center text-center [&>*]:m-0 gap-8 md:px-10">
            <h1 class="text-3xl md:text-5xl font-black uppercase">{{ section.settings.title }}</h1>
            <p class="text-lg font-medium">{{ section.settings.subtitle }}</p>
            <div class="flex flex-wrap gap-4 justify-center items-center">
                {% for block in section.blocks %}
                    <a href="{{ block.settings.button_link }}" class="bg-black text-white px-5 py-2 no-underline rounded-full">{{ block.settings.button_text }}</a>
                {% endfor %}
            </div>
            <div class="grid grid-cols-3 gap-0 [&>div:nth-child(2)]:border-x [&>div:nth-child(2)]:border-gray-200 [&>div:nth-child(2)]:border-solid [&>div:nth-child(2)]:border-y-0 pt-8">
                {% for block in section.blocks %}
                    {% if block.settings.perk_image != blank %}
                    <div class="flex flex-col items-center gap-2 px-3">
                        <img class="max-w-full h-auto" src="{{ block.settings.perk_image | image_url: width: 1500 }}" alt="Perk Image">
                        <p class="text-sm font-medium">{{ block.settings.perk_title }}</p>
                    </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
        <div>
            <img class="max-w-full h-auto" src="{{ section.settings.image | image_url: width: 1500 }}" alt="Hero Image">
        </div>
    </div>
  </div>
</div>

{% schema %}
{
    "name": "Homepage Hero",
    "class": "homepage-hero",
    "settings": [
         {
            "type": "color",
            "id": "background_color",
            "label": "Background Color",
            "default": "#fcfbf9"
         },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Homepage Hero"
        },
        {
            "type": "text",
            "id": "subtitle",
            "label": "Subtitle",
            "default": "Homepage Hero"
        },
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "blocks": [
        {
            "type": "button",
            "name": "Button",
            "settings": [
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button Text",
                    "default": "Button Text"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button Link"
                }
            ]
        },
        {
            "type": "perks",
            "name": "Perks",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "perk_image",
                    "label": "Perk Image"
                },
                {
                    "type": "text",
                    "id": "perk_title",
                    "label": "Perk Title",
                    "default": "Perk Title"
                }                
            ]
        }
    ],
    "presets": [
        {
            "name": "Homepage Hero"
        }
    ]
}
{% endschema %}