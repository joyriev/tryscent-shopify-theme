<div class="bg-white pt-24 pb-12">
    <div class="flex flex-col items-center mx-auto px-4 max-w-5xl gap-6">
        <h2 class="text-white text-3xl md:text-4xl font-bold text-center mb-10">
            {{ section.settings.satisfaction_title }}
        </h2>
    <div class="absolute left-6 top-0 bottom-0 w-1 bg-yellow-500"></div>

    <div class="space-y-12 relative">
      {% for block in section.blocks %}
        <div class="relative pl-20">
          <div class="absolute left-0 top-1/2 transform -translate-y-1/2">
            <div class="relative">
              <div class="w-6 h-6 bg-yellow-500 rounded-full absolute top-0 left-0"></div>
              <div class="w-3 h-3 bg-white rounded-full absolute top-1.5 left-1.5"></div>
            </div>
          </div>

          <h3 class="text-2xl font-bold mb-2 text-yellow-500">
            {{ block.settings.step_title }}
          </h3>
          <p class="text-base text-gray-300">
            {{ block.settings.step_description }}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
  "name": "TryScent Steps Timeline",
  "settings": [
    {
        "type": "text",
        "id": "satisfaction_title",
        "label": "Satisfaction Title",
        "default": "Your Satisfaction Guarantee"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title",
          "default": "Step 01"
        },
        {
          "type": "textarea",
          "id": "step_description",
          "label": "Step Description",
          "default": "Order your TryScent."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TryScent Steps Timeline",
      "category": "Info"
    }
  ]
}

{% endschema %}
