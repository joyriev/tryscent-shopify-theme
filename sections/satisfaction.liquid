<div class="bg-black pt-24 pb-12">
  <div class="mx-auto px-4 max-w-5xl">
    <h2 class="text-white text-3xl md:text-4xl font-bold text-center mb-16">
      {{ section.settings.satisfaction_title }}
    </h2>
    <div class="relative pl-12">
      <div class="before:content-[''] before:absolute before:left-[1.25rem] before:top-0 before:h-full before:w-1 before:bg-yellow-500 relative">
        <div class="flex flex-col gap-12 relative">
          {% for block in section.blocks %}
            <div class="relative flex items-start">
              <div class="absolute left-0 top-1.5 flex items-center justify-center w-10 h-10">
                <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                  <div class="w-4 h-4 bg-white rounded-full"></div>
                </div>
              </div>
              <div class="pl-16">
                <h3 class="text-2xl font-bold mb-2 text-yellow-500">
                  {{ block.settings.step_title }}
                </h3>
                <p class="text-base text-gray-300">
                  {{ block.settings.step_description }}
                </p>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "TryScent Steps Timeline",
  "settings": [
    {
      "type": "text",
      "id": "satisfaction_title",
      "label": "Satisfaction Title",
      "default": "Your Satisfaction Guarantee"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "text",
          "id": "step_title",
          "label": "Step Title",
          "default": "Step 01"
        },
        {
          "type": "textarea",
          "id": "step_description",
          "label": "Step Description",
          "default": "Order your TryScent."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TryScent Steps Timeline"
    }
  ]
}
{% endschema %}
