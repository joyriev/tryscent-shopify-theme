<div class="page-width">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 items-center">
      <div class="flex flex-col justify-center items-center text-center [&>*]:m-0 gap-6 md:px-10">
        <h2 class=" w-3/4 text-4xl font-black tracking-tight leading-snug">{{ section.settings.makes_diferent_title }}</h2>
        <img src={{section.settings.makes-different-image |  image_url }} alt='makes different' width={{section.settings.makes-different-image.width}} height={{section.settings.makes-different-image.height}}>
        <a href="{{ section.settings.makes_diferent_btn_link }}" class="bg-[#137c44] text-white uppercase font-semibold no-underline px-6 py-3 text-lg rounded-full">{{ section.settings.makes_diferent_btn_text }}</a>
        <div class="text-center">
          <div class="flex items-center gap-2 -mb-2">
            <div class="flex items-center gap-2">
              <img
                src={{ section.settings.offer_icon_one | image_url }}
                alt="sand watch icon"
                width="20"
                height="20">
              <p class="uppercase font-semibold text-xs md:text-base">Lasts 12+ Hours</p>
            </div>
            <div class="flex items-center gap-2">
              <img
                src={{ section.settings.offer_icon_two | image_url }}
                alt="sand watch icon"
                width="20"
                height="20">
              <p class="uppercase font-semibold text-xs md:text-base">loved by 10,000+</p>
            </div>
          </div>
          <div class="flex items-center gap-2 justify-center">
            <img
              src={{ section.settings.offer_icon_three | image_url }}
              alt="sand watch icon"
              width="20"
              height="20">
            <p class="uppercase font-semibold text-xs md:text-base">60 day satisfaction guarantee
            </p>
          </div>

        </div>
      </div>
      <div class="text-center">
        <img
          class="max-w-full h-auto"
          src="{{ section.settings.offer_image | image_url: width: 700 }}"
          alt="special offer image"
          width="450"
          height="450">
      </div>
    </div>
  </div>

{% schema %}
    {
      "name": "Makes Different List",
      "class": "makes-different-list",
      "settings": [
        {
          "type": "text",
          "id": "makes-different-title",
          "label": "Title",
          "default": "What Makes TryScent Different? Everything That Matters."
        },
        {
          "type": "image_picker",
          "id": "makes-different-image",
          "label": "Section Image"
        },
        {
          "type": "text",
          "id": "makes-different-btn-text",
          "label": "Button Text",
          "default": "Click Here"
        },
        {
          "type": "url",
          "id": "makes-different-btn-link",
          "label": "Button Link"
        },
        {
        "type": "image_picker",
        "id": "offer_icon_one",
        "label": "Offer Icon One"
      }, {
        "type": "image_picker",
        "id": "offer_icon_two",
        "label": "Offer Icon Two"
      }, {
        "type": "image_picker",
        "id": "offer_icon_three",
        "label": "Offer Icon Three"
      }
      ],
      "blocks": [
        {
          "type": "list_item",
          "name": "List Item",
          "settings": [
            {
              "type": "text",
              "id": "title",
              "label": "Title"
            },
            {
              "type": "text",
              "id": "description",
              "label": "Description"
            }
          ]
        }
      ],
      "max_blocks": 20,
      "presets": [
        {
          "name": "Makes Different",
          "blocks": [
            {
              "type": "list_item"
            }
          ]
        }
      ]
    }
    {% endschema %}
    