{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.id }}"
  class="section-{{ section.id }}-padding"
  style="background-color: {{ section.settings.background_color }}">
  <div class="page-width">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <h2 class="text-3xl mt-0 md:text-3xl font-black tracking-tight leading-snug text-center">{{ section.settings.makes_diferent_title }}</h2>
        <img
          class="lg:hidden w-full h-auto rounded-xl"
          src={{section.settings.makes-different-image | image_url}}
          alt="makes different"
          width="450"
          height="450">
        <ul class="list-none p-0 max-w-[450px] mx-auto">
          {% for block in section.blocks %}
            <li class="mb-6 flex items-center gap-4">
              <img
                src="{{ 'check.svg' | asset_url }}"
                alt="check"
                width="45"
                height="45">
              <div>
                <h3 class="m-0 text-lg font-semibold tracking-normal">{{ block.settings.title }}</h3>
                <p class="m-0 text-gray-500 tracking-normal">{{ block.settings.description }}</p>
              </div>

            </li>
          {% endfor %}
        </ul>
        <div class="text-center mt-8 flex flex-col items-center gap-6">
          <a href="{{ section.settings.makes-different-btn-link }}" class="bg-[#137c44] text-white uppercase font-semibold no-underline px-6 py-3 text-lg rounded-full block w-full max-w-[400px]">{{ section.settings.makes-different-btn-text }}</a>
          <ul class="flex justify-center flex-wrap gap-x-6 gap-y-3 list-unstyled">
            <li class="flex items-center gap-1.5">
              <img
                src="/cdn/shop/files/sandwatch.svg?v=1753955350"
                height="16"
                width="auto"
                alt="Icon">
              <span class="leading-none">Lasts 12+ Hours</span>
            </li>

            <li class="flex items-center gap-1.5">
              <img
                src="/cdn/shop/files/heart.svg?v=1753955924"
                height="16"
                width="auto"
                alt="Icon">
              <span class="leading-none">loved by 10,000+</span>
            </li>

            <li class="flex items-center gap-1.5">
              <img
                src="/cdn/shop/files/sheild-star.svg?v=1753955264"
                height="16"
                width="auto"
                alt="Icon">
              <span class="leading-none">60 day satisfaction guarantee</span>
            </li>

          </ul>
        </div>
      </div>
      <div>
        <img
          class="w-full h-auto [display:none] lg:[display:block] rounded-xl"
          src="{{ section.settings.makes-different-image | image_url: width: 700 }}"
          alt="special offer image"
          width="500"
          height="500">
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Makes Different List",
    "class": "makes-different-list",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#FFFFFF"
      },
      {
        "type": "text",
        "id": "makes_diferent_title",
        "label": "Title",
        "default": "What Makes TryScent Different? Everything That Matters."
      },
      {
        "type": "image_picker",
        "id": "makes-different-image",
        "label": "Section Image"
      },
      {
        "type": "text",
        "id": "makes-different-btn-text",
        "label": "Button Text",
        "default": "Click Here"
      }, {
        "type": "url",
        "id": "makes-different-btn-link",
        "label": "Button Link"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 72
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 72
      }
    ],
    "blocks": [
      {
        "type": "list_item",
        "name": "List Item",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "text",
            "id": "description",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Makes Different",
        "blocks": [
          {
            "type": "list_item"
          }
        ]
      }
    ]
  }
{% endschema %}