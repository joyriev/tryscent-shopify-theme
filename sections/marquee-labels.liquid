<div
  class="sale-marquee flex items-center whitespace-nowrap max-w-full text-black"
>
  {% for i in (1..3) %}
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="flex items-center gap-1 no-underline hover:no-underline text-black">
        {% if block.settings.icon %}
          <img src="{{ block.settings.icon | img_url: '32x32' }}" alt="" class="inline-block mr-2" style="height: 1em; width: auto;" />
        {% endif %}
        <span class="md:text-sm uppercase font-medium">
          {{ block.settings.label }}
        </span>
      </a>
    {% endfor %}
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Marquee Labels",
    "max_blocks": 12,
    "class": "announcement-bar-section",
    "enabled_on": {
      "groups": ["header"]
    },
    "blocks": [
      {
        "type": "label",
        "name": "Label",
        "settings": [
          {
            "type": "image_picker",
            "id": "icon",
            "label": "Icon"
          }, {
            "type": "text",
            "id": "label",
            "label": "Label",
            "default": "Free Shipping"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Marquee Labels"
      }
    ]
  }
{% endschema %}