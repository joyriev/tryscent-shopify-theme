<style>
  .insta-story-card:nth-child(2) h2 {
    color: transparent;
    background-image: linear-gradient(to bottom, #6e32e9, #ff19a8, #fed45d);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>

<div class="bg-[#121212] py-2 lg:hidden">
  <div class="page-width">
    <div class="grid grid-cols-5 gap-4 justify-between">
      {%- for block in section.blocks -%}
        {%- if block.type == 'story' -%}
          <a href="{{ block.settings.link }}" class="insta-story-card no-underline text-center flex flex-col">
            <div class="[background-image:linear-gradient(to_bottom,_#6e32e9,_#ff19a8,_#fed45d)] flex p-[2px] rounded-full aspect-square relative">
              <img
                src="{{ block.settings.image | image_url: width: 200 }}"
                alt="{{ block.settings.title }}"
                height="100"
                width="100"
                class="absolute top-[2px] left-[2px] h-[calc(100%-4px)] w-[calc(100%-4px)] object-cover object-center rounded-full border-[#121212] border-4 border-solid">
            </div>
            <h2 class="text-xs text-white my-1">{{ block.settings.title }}</h2>
          </a>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Insta Story",
    "settings": [],
    "blocks": [
      {
        "type": "story",
        "name": "Story",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }, {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Insta Story"
      }
    ]
  }
{% endschema %}