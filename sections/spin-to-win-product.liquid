{% liquid
  assign product = section.settings.product_id
  assign variant_images = product.images | where: 'attached_to_variant?', true | map: 'src'
%}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .shopify-section-group-header-group {
    visibility: hidden;
    position: fixed;
    top: -99999px;
    left: -99999px;
  }
{%- endstyle -%}

{{ 'section-main-product.css' | asset_url | stylesheet_tag }}
<div id="spin-to-win-product" class="section-{{ section.id }}-padding">
  <div class="page-width">
    <div style="display: flex;" class="product product--large product--left product--stacked product--mobile-hide grid grid--1-col grid--2-col-tablet">
      <div class="grid__item product__media-wrapper pb-6">
        {% render 'product-media-gallery'
          , variant_images: variant_images
          , product_param: product %}
      </div>
      <div class="product__info-wrapper grid__item scroll-trigger animate--slide-in">
        {{ product.title }}
      </div>
    </div>
  </div>

  {%- if product.media.size > 0 -%}
    <script src="{{ 'product-modal.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>
  {%- endif -%}

  <script type="application/ld+json">
    {{ product | structured_data }}
  </script>
</div>

<script>
    console.log({{ variant_images | json }});
</script>

{% schema %}
  {
    "name": "Spin To Win Product",
    "tag": "section",
    "class": "section",
    "settings": [
      {
        "type": "product",
        "id": "product_id",
        "label": "Product"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "presets": [
      {
        "name": "Spin To Win Product"
      }
    ]
  }
{% endschema %}