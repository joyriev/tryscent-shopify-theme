{% comment %}
  Bundle Button Snippet
  Premium gradient button to redirect to bundle builder
{% endcomment %}

<style>
.bundle-button {
  display: block;
  width: 100%;
  padding: 16px 24px;
  margin-top: 12px;
  background: linear-gradient(45deg, #ff6b35, #ff8c42, #ffa726, #ffb74d, #ff8c42, #ff6b35);
  background-size: 300% 300%;
  animation: gradient-shift 3s ease-in-out infinite;
  border: none;
  border-radius: 50px;
  color: white;
  font-size: 16px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 1px;
  text-decoration: none;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4px 15px rgba(255, 107, 53, 0.4);
  position: relative;
  overflow: hidden;
}

.bundle-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 107, 53, 0.6);
  color: white;
  text-decoration: none;
}

.bundle-button:active {
  transform: translateY(0);
}

.bundle-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s;
}

.bundle-button:hover::before {
  left: 100%;
}

@keyframes gradient-shift {
  0% {
    background-position: 0% 50%;
  }
  50% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}

.bundle-button-text {
  position: relative;
  z-index: 1;
  display: block;
  line-height: 1.3;
}

.bundle-button-main {
  font-size: 18px;
  font-weight: 800;
  display: block;
  margin-bottom: 4px;
}

.bundle-button-sub {
  font-size: 12px;
  font-weight: 600;
  opacity: 0.9;
  text-transform: none;
  letter-spacing: 0.5px;
  display: block;
}

/* Mobile adjustments */
@media (max-width: 768px) {
  .bundle-button {
    padding: 14px 20px;
    font-size: 15px;
  }
  
  .bundle-button-main {
    font-size: 16px;
  }
  
  .bundle-button-sub {
    font-size: 11px;
  }
}
</style>

<a href="/pages/build-your-bundle" class="bundle-button">
  <span class="bundle-button-text">
    <span class="bundle-button-main">BUILD YOUR BUNDLE</span>
    <span class="bundle-button-sub">STARTING FROM BUY 2 GET 1 FREE</span>
  </span>
</a> 