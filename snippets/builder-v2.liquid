{% comment %}
  Product Bundler V2 - Separate Desktop and Mobile Versions
  Desktop: .bundler-desktop-*
  Mobile: .bundler-mobile-*
{% endcomment %}

{% assign bundle_collection = collections['smells-like'] %}
{% unless bundle_collection %}
  {% assign bundle_collection = collections.first %}
{% endunless %}

<!-- DESKTOP VERSION -->
<div class="bundler-desktop" data-bundler>
  <div class="bundler-desktop-container">
    
    <!-- Desktop Header -->
    <div class="bundler-desktop-header">
      <div class="desktop-header-left">
        <h1 class="bundler-desktop-title">Create Your Bundle!</h1>
        <p class="bundler-desktop-subtitle">Best scents you've ever smelled or your money back.</p>
        <div class="bundler-desktop-reviews">
          {%- if shop.metafields.reviews.rating.value != blank -%}
            <div class="rating">
              <img src="{{ 'rating-stars.svg' | asset_url }}" alt="*****" height="20" width="100">
            </div>
            <span class="rating-text">({{ shop.metafields.reviews.rating.value }} / {{ shop.metafields.reviews.rating.value.scale_max }})</span>
            <span class="review-count">{{ shop.metafields.judgeme.all_reviews_count | default: '150,983' }} Reviews</span>
          {%- else -%}
            <div class="rating">
              <img src="{{ 'rating-stars.svg' | asset_url }}" alt="*****" height="20" width="100">
            </div>
            <span class="rating-text">(5 / 5)</span>
            <span class="review-count">{{ shop.metafields.judgeme.all_reviews_count | default: '150,983' }} Reviews</span>
          {%- endif -%}
        </div>
      </div>
      
      <div class="desktop-header-right">
        <div class="desktop-benefit-badges">
          <div class="desktop-benefit-badge">
            <div class="benefit-number">1</div>
            <span>Select Up To 5 Bottles To Get $100 OFF</span>
          </div>
          <div class="desktop-benefit-badge">
            <div class="benefit-number">2</div>
            <span>Get Up To 4 Bottles For FREE</span>
          </div>
          <div class="desktop-benefit-badge">
            <div class="benefit-number">3</div>
            <span>Add to cart & enjoy TryScent<br>We offer 60-day satisfaction guarantee</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Desktop Search and Filter -->
    <div class="bundler-desktop-search-filter">
      <div class="desktop-search-container">
        <input type="text" id="desktopSearchInput" placeholder="Search for scents..." onkeyup="filterProducts()">
      </div>
      <div class="desktop-filter-container">
        <button class="desktop-filter-btn active" data-filter="all" onclick="filterByCategory('all')">All</button>
        <button class="desktop-filter-btn" data-filter="man" onclick="filterByCategory('man')">Men</button>
        <button class="desktop-filter-btn" data-filter="woman" onclick="filterByCategory('woman')">Women</button>
      </div>
    </div>

    <!-- Desktop Main Content -->
    <div class="bundler-desktop-main-content">
      
      <!-- Desktop Products Grid -->
      <div class="bundler-desktop-products" id="desktopProductsGrid">
        {% for product in bundle_collection.products %}
          {% assign default_variant = product.variants | where: "title", "100ML" | first %}
          {% unless default_variant %}
            {% assign default_variant = product.variants.first %}
          {% endunless %}
          
          <div class="desktop-product-card bundler-product" data-product-id="{{ product.id }}" data-variant-id="{{ default_variant.id }}" data-category="{{ product.tags | join: ' ' | downcase }}">
            {% if product.tags contains 'new' %}
              <div class="desktop-product-badge new">New</div>
            {% elsif product.tags contains 'popular' %}
              <div class="desktop-product-badge popular">Most Popular</div>
            {% endif %}
            
            <div class="desktop-product-image">
              <img src="{{ product.featured_image | image_url: width: 200 }}" alt="{{ product.title }}" loading="lazy">
            </div>
            
            <div class="desktop-product-info">
              <h3 class="desktop-product-title">{{ product.title }}</h3>
              
              <div class="desktop-product-reviews">
                {%- if product.metafields.reviews.rating.value != blank -%}
                  <div class="rating">
                    <img src="{{ 'rating-stars.svg' | asset_url }}" alt="*****" height="12" width="60">
                  </div>
                  <span class="rating-text">{{ product.metafields.reviews.rating.value }}</span>
                  <span class="review-count">({{ product.metafields.judgeme.reviews_count | default: '1,234' }})</span>
                {%- else -%}
                  <div class="rating">
                    <img src="{{ 'rating-stars.svg' | asset_url }}" alt="*****" height="12" width="60">
                  </div>
                  <span class="rating-text">4.8</span>
                  <span class="review-count">(1,234)</span>
                {%- endif -%}
              </div>
              
              <div class="desktop-product-price" 
                   data-30ml="{{ default_variant.price | money }}"
                   data-50ml="{{ default_variant.price | money }}"
                   data-100ml="{{ default_variant.price | money }}"
                   data-variant-30ml="{{ default_variant.id }}"
                   data-variant-50ml="{{ default_variant.id }}"
                   data-variant-100ml="{{ default_variant.id }}">
                {{ default_variant.price | money }}
              </div>
            </div>
            
            <button class="desktop-add-to-bundle-btn" onclick="selectProduct({{ product.id }})">
              ADD TO BUNDLE
            </button>
          </div>
        {% endfor %}
      </div>
      
      <!-- Desktop Sidebar -->
      <div class="bundler-desktop-sidebar">
        
        <!-- Desktop Size Selection -->
        <div class="desktop-sidebar-section desktop-size-selector">
          <h3>Select Size!</h3>
          <p>80% of customers buy 100ML</p>
          <div class="desktop-size-buttons">
            <button class="desktop-size-btn" data-variant="30ML" onclick="selectVariant('30ML')">30ML</button>
            <button class="desktop-size-btn" data-variant="50ML" onclick="selectVariant('50ML')">50ML</button>
            <button class="desktop-size-btn active" data-variant="100ML" onclick="selectVariant('100ML')">100ML</button>
          </div>
        </div>
        
        <!-- Desktop Bundle Options -->
        <div class="desktop-sidebar-section desktop-bundle-options">
          {% assign first_product = bundle_collection.products.first %}
          {% assign first_variant_100ml = first_product.variants | where: 'title', '100ML' | first %}
          {% assign base_price = first_variant_100ml.price | default: 2699 %}
          
          <button class="desktop-bundle-option active" data-bundle-type="2+1" onclick="selectBundleType('2+1')">
            <span class="bundle-desc">Buy 2, Get 1 Free</span>
            <span class="bundle-price">{{ base_price | times: 2 | money }}</span>
            <span class="per-bottle">{{ base_price | times: 2 | divided_by: 3 | money }}/bottle</span>
            <div class="bundle-savings">SAVE {{ base_price | money }}</div>
          </button>
          
          <button class="desktop-bundle-option" data-bundle-type="3+2" onclick="selectBundleType('3+2')">
            <span class="bundle-desc">Buy 3, Get 2 Free</span>
            <span class="bundle-price">{{ base_price | times: 3 | money }}</span>
            <span class="per-bottle">{{ base_price | times: 3 | divided_by: 5 | money }}/bottle</span>
            <div class="bundle-savings">SAVE {{ base_price | times: 2 | money }}</div>
          </button>
          
          <button class="desktop-bundle-option" data-bundle-type="4+3" onclick="selectBundleType('4+3')">
            <div class="desktop-bundle-badge">FREE SHIPPING</div>
            <span class="bundle-desc">Buy 4, Get 3 Free</span>
            <span class="bundle-price">{{ base_price | times: 4 | money }}</span>
            <span class="per-bottle">{{ base_price | times: 4 | divided_by: 7 | money }}/bottle</span>
            <div class="bundle-savings">SAVE {{ base_price | times: 3 | money }}</div>
          </button>
          
          <button class="desktop-bundle-option" data-bundle-type="5+4" onclick="selectBundleType('5+4')">
            <div class="desktop-bundle-badge best-value">Best Value</div>
            <span class="bundle-desc">Buy 5, Get 4 Free</span>
            <span class="bundle-price">{{ base_price | times: 5 | money }}</span>
            <span class="per-bottle">{{ base_price | times: 5 | divided_by: 9 | money }}/bottle</span>
            <div class="bundle-savings">SAVE {{ base_price | times: 4 | money }}</div>
          </button>
        </div>
        
        <!-- Desktop Progress Section -->
        <div class="desktop-sidebar-section desktop-progress-section">
          <h4>Please Select At Least 3 Scents</h4>
          <div class="desktop-progress-bar">
            <div class="desktop-progress-fill"></div>
            <div class="desktop-progress-markers">
              <div class="marker" data-count="0">0</div>
              <div class="marker" data-count="16">16</div>
              <div class="marker" data-count="24">24</div>
              <div class="marker" data-count="32">32</div>
            </div>
          </div>
          <div class="desktop-selected-items"></div>
        </div>
        
        <!-- Desktop Benefits -->
        <div class="desktop-sidebar-section desktop-benefits-section">
          <h4>Small Before You Commit</h4>
          <div class="desktop-benefits-grid">
            <div class="desktop-benefit-item">✓ Choosing a signature scent you'll love is a process</div>
            <div class="desktop-benefit-item">✓ Scent lasts 12 hours</div>
            <div class="desktop-benefit-item">✓ Worldwide shipping</div>
            <div class="desktop-benefit-item">✓ You pay 1/10 price of originals</div>
            <div class="desktop-benefit-item">✓ You can return up to 60 days</div>
            <div class="desktop-benefit-item">✓ Scent guarantee</div>
          </div>
        </div>
        
        <!-- Desktop Add to Cart Button -->
        <button class="desktop-add-to-cart-btn" onclick="addBundleToCartAndCheckout()">
          ADD TO CART
        </button>
        
      </div>
    </div>
  </div>
</div>

