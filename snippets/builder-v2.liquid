<style>
/* V2 Bundler Styles - Separate Desktop and Mobile */

/* DESKTOP STYLES - Gray Background with White Cards */
.bundler-desktop {
  background: #f5f5f5;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
  display: block;
}

.bundler-desktop-container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 20px;
}

/* Desktop Header */
.bundler-desktop-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  background: white;
  padding: 24px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.desktop-header-left {
  flex: 1;
}

.bundler-desktop-title {
  font-size: 28px;
  font-weight: 700;
  margin: 0 0 8px 0;
  color: #333;
}

.bundler-desktop-subtitle {
  font-size: 16px;
  color: #666;
  margin: 0 0 16px 0;
}

.bundler-desktop-reviews {
  display: flex;
  align-items: center;
  gap: 8px;
}

.bundler-desktop-reviews .rating img {
  height: 20px;
  width: 100px;
}

.bundler-desktop-reviews .rating-text,
.bundler-desktop-reviews .review-count {
  font-size: 14px;
  color: #666;
}

/* Desktop Header Right - Benefit Badges */
.desktop-header-right {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.desktop-benefit-badges {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.desktop-benefit-badge {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px 12px;
  background: #f8f9fa;
  border-radius: 8px;
  border-left: 4px solid #28a745;
}

.benefit-number {
  width: 24px;
  height: 24px;
  background: #28a745;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  font-weight: 700;
  flex-shrink: 0;
}

.desktop-benefit-badge span {
  font-size: 14px;
  color: #333;
  line-height: 1.3;
}

/* Desktop Search and Filter */
.bundler-desktop-search-filter {
  background: white;
  padding: 16px 24px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  gap: 20px;
}

.desktop-search-container {
  flex: 1;
}

.desktop-search-container input {
  width: 100%;
  padding: 10px 16px;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  font-size: 14px;
  transition: border-color 0.2s;
}

.desktop-search-container input:focus {
  outline: none;
  border-color: #28a745;
}

.desktop-filter-container {
  display: flex;
  gap: 8px;
}

.desktop-filter-btn {
  padding: 8px 16px;
  border: 2px solid #e9ecef;
  background: white;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s;
}

.desktop-filter-btn:hover,
.desktop-filter-btn.active {
  background: #28a745;
  border-color: #28a745;
  color: white;
}

/* Desktop Main Content */
.bundler-desktop-main-content {
  display: flex;
  gap: 24px;
  align-items: flex-start;
}

/* Desktop Products Grid */
.bundler-desktop-products {
  flex: 1;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

/* Desktop Product Cards */
.desktop-product-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  padding: 16px;
  position: relative;
  transition: all 0.2s;
  cursor: pointer;
}

.desktop-product-card:hover {
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  transform: translateY(-2px);
}

.desktop-product-badge {
  position: absolute;
  top: 8px;
  right: 8px;
  background: #28a745;
  color: white;
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
}

.desktop-product-image {
  text-align: center;
  margin-bottom: 12px;
}

.desktop-product-image img {
  width: 80px;
  height: 80px;
  object-fit: contain;
}

